{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2017",
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": "../",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "paths": {
      "@anxi/app": [
        "./packages/app/index.ts"
      ],
      "@anxi/core": [
        "./packages/core/index.ts"
      ],
      "@anxi/loader": [
        "./packages/loader/index.ts"
      ],
      "@anxi/physics": [
        "./packages/physics/index.ts"
      ],
      "@anxi/render": [
        "./packages/render/index.ts"
      ],
      "@anxi/vdom": [
        "./packages/vdom/index.ts"
      ],
      "@anxi/view": [
        "./packages/view/index.ts"
      ],
      "@anxi/view-const": [
        "./packages/view-const/index.ts"
      ],
      "@anxi/view-matrix": [
        "./packages/view-matrix/index.ts"
      ],
      "@anxi/view-particle": [
        "./packages/view-particle/index.ts"
      ],
      "@anxi/view-spine": [
        "./packages/view-spine/index.ts"
      ],
      "@anxi/*": [
        "./packages/*"
      ],
      "anxi.js": [
        "./bundles/anxi.js"
      ]
    }
  },
  "include": [
    "./**/*",
    "../packages/**/*"
  ],
  "exclude": [
    "../packages/*/dist/index.d.ts"
  ]
}