{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2017",
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": "../",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "paths": {
      "@anxi/app": [
        "./packages/app"
      ],
      "@anxi/core": [
        "./packages/core"
      ],
      "@anxi/loader": [
        "./packages/loader"
      ],
      "@anxi/physics": [
        "./packages/physics"
      ],
      "@anxi/render": [
        "./packages/render"
      ],
      "@anxi/vdom": [
        "./packages/vdom"
      ],
      "@anxi/view": [
        "./packages/view"
      ],
      "@anxi/view-const": [
        "./packages/view-const"
      ],
      "@anxi/view-matrix": [
        "./packages/view-matrix"
      ],
      "@anxi/view-particle": [
        "./packages/view-particle"
      ],
      "@anxi/view-spine": [
        "./packages/view-spine"
      ],
      "@anxi/*": [
        "./packages/*"
      ],
      "anxi.js": [
        "./bundles/anxi.js"
      ]
    }
  },
  "include": [
    "./**/*",
    "../packages/**/*"
  ]
}