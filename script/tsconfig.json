{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "dist/types",
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "noImplicitReturns": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictFunctionTypes": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@anxi/img-packer":[
        "./packages/img-packer"
      ]
    }
  },
  "include": [
    "./*",
    "../packages/img-packer/*",
    "../node_modules"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}