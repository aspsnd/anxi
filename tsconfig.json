{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "out",
    "declaration": true,
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "noImplicitReturns": false,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strict": true,
    "strictFunctionTypes": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@anxi/app": [
        "./packages/app"
      ],
      "@anxi/core": [
        "./packages/core"
      ],
      "@anxi/img-packer": [
        "./packages/img-packer"
      ],
      "@anxi/loader": [
        "./packages/loader"
      ],
      "@anxi/physics": [
        "./packages/physics"
      ],
      "@anxi/render": [
        "./packages/render"
      ],
      "@anxi/vdom": [
        "./packages/vdom"
      ],
      "@anxi/view-const": [
        "./packages/view-const"
      ],
      "@anxi/view-matrix": [
        "./packages/view-matrix"
      ],
      "@anxi/view-particle": [
        "./packages/view-particle"
      ],
      "@anxi/view-spine": [
        "./packages/view-spine"
      ],
      "@anxi/*": [
        "./packages/*"
      ],
      "anxi.js": [
        "./bundles/anxi.js"
      ]
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/global.d.ts",
    "packages/**/*.ts",
    "packages/*/index.ts",
    "bundles/anxi.js/index.ts"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}