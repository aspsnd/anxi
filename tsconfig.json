{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "out",
    "declaration": true,
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "noImplicitReturns": false,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strict": true,
    "strictFunctionTypes": true,
    "declarationDir": "./types",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node",
      "offscreencanvas"
    ],
    "paths": {
      "@anxi/app": [
        "./packages/app/index.ts"
      ],
      "@anxi/core": [
        "./packages/core/index.ts"
      ],
      "@anxi/loader": [
        "./packages/loader/index.ts"
      ],
      "@anxi/physics": [
        "./packages/physics/index.ts"
      ],
      "@anxi/render": [
        "./packages/render/index.ts"
      ],
      "@anxi/vdom": [
        "./packages/vdom/index.ts"
      ],
      "@anxi/view": [
        "./packages/view/index.ts"
      ],
      "@anxi/view-const": [
        "./packages/view-const/index.ts"
      ],
      "@anxi/view-matrix": [
        "./packages/view-matrix/index.ts"
      ],
      "@anxi/view-particle": [
        "./packages/view-particle/index.ts"
      ],
      "@anxi/view-spine": [
        "./packages/view-spine/index.ts"
      ],
      "@anxi/*": [
        "./packages/*/index.ts"
      ],
      "anxi.js": [
        "./bundles/anxi.js/index.ts"
      ]
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/global.d.ts",
    "packages/**/*.ts",
    "packages/*/index.ts",
    "bundles/anxi.js/index.ts"
  ],
  "exclude": [
    "**/script/**",
    "**/types/**",
    "bundles/**/*.d.ts",
    "rollup.config.js",
    "package/*/dist/index.d.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}